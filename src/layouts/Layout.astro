---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.scss';

export interface Props {
    title: string;
}

const {title}: Props = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{title}</title>
    </head>
    <body>
        <Header />
        <slot />
        <Footer />
    </body>
</html>